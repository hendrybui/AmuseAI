<views:ViewBase x:Class="Amuse.UI.Views.VideoUpscaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:userControls="clr-namespace:Amuse.UI.UserControls"
             xmlns:views="clr-namespace:Amuse.UI.Views"
             x:Name="UI" mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800" >
    <Grid DataContext="{Binding ElementName=UI}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Control Panel-->
        <DockPanel Grid.Column="0" DataContext="{Binding ElementName=UI}" Margin="3,3,3,0">
            <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,1,0" />
                <Button Content="Execute" Command="{Binding GenerateCommand}" IsEnabled="{Binding SelectedModel.IsLoaded, FallbackValue=False, TargetNullValue=False}" IsDefault="True" Margin="1,0,0,0"/>
            </UniformGrid>
            <DockPanel >
                <userControls:UpscalePickerControl DockPanel.Dock="Top"
                   Settings="{Binding Settings}"
                   LoadCommand="{Binding LoadModelCommand}"
                   UnloadCommand="{Binding UnloadModelCommand}"
                   IsEnabled="{Binding IsGenerating, Converter={StaticResource InverseBoolConverter}}"
                   SelectedModel="{Binding SelectedModel, Mode=TwoWay}"/>
                <DockPanel >

                    <UniformGrid DockPanel.Dock="Top" Columns="2" Margin="5" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Scale Factor:" Margin="0,0,5,0" FontStyle="Italic" Opacity=".6"/>
                            <TextBlock Text="{Binding UpscaleInfo.ScaleFactor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Input Size:" Margin="0,0,5,0" FontStyle="Italic" Opacity=".6"/>
                            <TextBlock Text="{Binding UpscaleInfo.InputWidth}" />
                            <TextBlock Text="x" Margin="5,0,5,0"/>
                            <TextBlock Text="{Binding UpscaleInfo.InputHeight}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Sample Size:" Margin="0,0,5,0" FontStyle="Italic" Opacity=".6"/>
                            <TextBlock Text="{Binding UpscaleInfo.SampleSize, Mode=OneWay}" >
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UpscaleInfo.SampleSize, ElementName=UI}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="Any">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UpscaleInfo.SampleSize, ElementName=UI}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Output Size:" Margin="0,0,5,0" FontStyle="Italic" Opacity=".6"/>
                            <TextBlock Text="{Binding UpscaleInfo.OutputWidth}" />
                            <TextBlock Text="x" Margin="5,0,5,0"/>
                            <TextBlock Text="{Binding UpscaleInfo.OutputHeight}" />
                        </StackPanel>
                    </UniformGrid>

                    <UniformGrid DockPanel.Dock="Top" Columns="3" Margin="0,2,0,0" IsEnabled="{Binding SelectedModel.IsLoaded, FallbackValue=False, TargetNullValue=False}">
                        <StackPanel Margin="1,0,1,0" ToolTip="Upscale image in smaller tiles to save memory">
                            <TextBlock Style="{StaticResource FieldTextBlockStyle}">Tile Mode</TextBlock>
                            <ComboBox ItemsSource="{Binding Source={StaticResource TileMode}}" SelectedItem="{Binding TileMode}" Style="{StaticResource EnumComboBox}"/>
                        </StackPanel>
                        <StackPanel ToolTip="The maximum tile size to use">
                            <TextBlock Text="Tile Size" Style="{StaticResource FieldTextBlockStyle}"/>
                            <TextBox Text="{Binding TileSize, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TileMode, Converter={StaticResource InverseEnumToBoolConverter}, ConverterParameter=None}" />
                        </StackPanel>
                        <StackPanel ToolTip="Pixels to overlap when joining tiles, reduces visible seams">
                            <TextBlock Text="Tile Overlap" Style="{StaticResource FieldTextBlockStyle}"/>
                            <TextBox Text="{Binding TileOverlap, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TileMode, Converter={StaticResource InverseEnumToBoolConverter}, ConverterParameter=None}" Margin="4,0,0,0"/>
                        </StackPanel>
                    </UniformGrid>


                    <DockPanel Margin="0,4,0,0">
                        <TextBlock DockPanel.Dock="Top" Text="Video Input" Style="{StaticResource FieldTextBlockStyle}"/>
                        <userControls:VideoInputControl VerticalAlignment="Top"
                             SourceVideo="{Binding SourceVideo}"
                             VideoWidth="{Binding SourceVideo.Video.Width}"
                             VideoHeight="{Binding SourceVideo.Video.Height}"
                             IsEnabled="{Binding IsGenerating, Converter={StaticResource InverseBoolConverter}}"
                             PreviewImage="{Binding PreviewSource}"
                             Result="{Binding InputVideo, Mode=TwoWay}"
                             VideoSync="{Binding VideoSync}"/>
                    </DockPanel>

                </DockPanel>
            </DockPanel>
        </DockPanel>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="4" />

        <!--Content Panel-->
        <Grid Grid.Column="2" Margin="3,0,0,0">
            <DockPanel>

                <!--Bottom Toolbar-->
                <DockPanel DockPanel.Dock="Bottom">
                    <userControls:OutputToolbarControl
                        x:Name="ToolbarControl" 
                        Settings="{Binding Settings}" 
                        IsHistoryView="{Binding IsHistoryView, Mode=TwoWay}"
                        Statistics="{Binding Statistics}"/>
                </DockPanel>

                <Grid >

                    <!--Result-->
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding IsHistoryView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <userControls:UpscaleVideoResultControl 
                            Margin="15,30,30,30" 
                            Source="{Binding InputVideo}"
                            UpscaleInfo="{Binding UpscaleInfo}"
                            PreviewImage="{Binding PreviewResult}"
                            Result="{Binding ResultVideo}" 
                            Progress="{Binding Progress}"
                            SaveVideoCommand="{Binding SaveVideoCommand}"
                            CopyVideoCommand="{Binding CopyVideoCommand}"
                            RemoveVideoCommand="{Binding RemoveVideoCommand}" 
                            VideoSync="{Binding VideoSync}"/>
                    </Grid>

                    <!--History-->
                    <Grid Visibility="{Binding IsHistoryView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListBox ItemsSource="{Binding}" ItemContainerStyle="{StaticResource ImageResultListBoxItem}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                            <ListBox.DataContext>
                                <CollectionViewSource Source="{Binding VideoResults, ElementName=UI}">
                                    <CollectionViewSource.SortDescriptions>
                                        <scm:SortDescription PropertyName="Timestamp" Direction="Descending" />
                                    </CollectionViewSource.SortDescriptions>
                                </CollectionViewSource>
                            </ListBox.DataContext>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding HistoryColumns, ElementName=ToolbarControl}" VerticalAlignment="Top" IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                        <TextBlock Text="No Videos Found" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                    <Setter Property="Visibility" Value="Hidden" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding VideoResults.Count, ElementName=UI}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</views:ViewBase>
