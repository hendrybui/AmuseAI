<local:BaseDialog x:Class="Amuse.UI.Dialogs.PreviewVideoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amuse.UI.Dialogs"
        xmlns:effects="clr-namespace:Amuse.UI.Effects"
        xmlns:userControls="clr-namespace:Amuse.UI.UserControls"
        mc:Ignorable="d"
        x:Name="UI"
        Icon="/Images/Icon.png"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" 
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Style="{StaticResource BaseToolWindow}">
    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="C" Command="{Binding CopyVideoCommand, ElementName=UI}" />
        <KeyBinding Modifiers="Ctrl" Key="S" Command="{Binding SaveVideoCommand, ElementName=UI}" />
    </Window.InputBindings>
    <DockPanel DataContext="{Binding ElementName=UI}" Margin="10,5,10,10">

        <DockPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <CheckBox DockPanel.Dock="Left" Content="Actual Size" IsChecked="{Binding IsActualSize}" />
            <Button DockPanel.Dock="Right" Content="Close" Command="{Binding CancelCommand}" IsCancel="True" Width="100" Height="30" />
            <TextBlock />
        </DockPanel>

        <MediaElement Height="{Binding VideoHeight}" Width="{Binding VideoWidth}" VerticalAlignment="Top" 
                   MinWidth="512" 
                   MinHeight="512"
                   Source="{Binding VideoResult.FileName}" 
                   Stretch="{Binding VideoStrech}" 
                   LoadedBehavior="Manual" 
                   UnloadedBehavior="Close" 
                   Loaded="MediaElement_Loaded"
                   MediaEnded="MediaElement_MediaEnded" 
                   MouseLeftButtonDown="MediaElement_MouseLeftButtonDown">
            <MediaElement.Effect>
                <effects:DeeperColorEffect  />
            </MediaElement.Effect>
            <MediaElement.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" InputGestureText="Ctrl+C" Command="{Binding CopyVideoCommand}" >
                        <MenuItem.Icon>
                            <userControls:FontAwesome Icon="&#xf0c5;" IconStyle="Light" Size="15" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save" InputGestureText="Ctrl+S" Command="{Binding SaveVideoCommand}" >
                        <MenuItem.Icon>
                            <userControls:FontAwesome Icon="&#xf0c7;" IconStyle="Light" Size="15"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </MediaElement.ContextMenu>
        </MediaElement>


    </DockPanel>
</local:BaseDialog>