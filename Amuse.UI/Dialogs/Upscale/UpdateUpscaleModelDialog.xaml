<local:BaseDialog x:Class="Amuse.UI.Dialogs.UpdateUpscaleModelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amuse.UI.Dialogs"
        xmlns:userControls="clr-namespace:Amuse.UI.UserControls"
        mc:Ignorable="d"
        x:Name="UI"
        Icon="/Images/Icon.png"
        MinWidth="450"
        MaxWidth="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner" 
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Style="{StaticResource BaseToolWindow}"
        Title="Update Upscale Model">
    <DockPanel DataContext="{Binding ElementName=UI}" Margin="5">
        <StackPanel DockPanel.Dock="Top">

            <Border BorderBrush="Red" BorderThickness="1" CornerRadius="4">
                <StackPanel Orientation="Horizontal" Margin="30, 5" HorizontalAlignment="Center">
                    <userControls:FontAwesome Color="Red" Icon="&#xf00d;" />
                    <TextBlock Text="{Binding ValidationError}" Margin="5,0,0,3" />
                </StackPanel>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationError}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>


            <GroupBox Header="Settings" Margin="5,0" >
                <StackPanel Margin="5" >

                    <DockPanel>
                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="Model Name" Style="{StaticResource FieldTextBlockStyle}" />
                            <TextBox Text="{Binding UpdateModelSet.Name, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </DockPanel>

                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="Model File" Style="{StaticResource FieldTextBlockStyle}"/>
                        <userControls:FilePickerTextBox FileName="{Binding UpdateModelSet.ModelFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" InitialDirectory="{Binding Settings.DirectoryModel}" Filter="Onnx files (*.onnx)|*.onnx" DefaultExt="onnx" />
                    </StackPanel>


                    <UniformGrid Columns="4" Margin="0,5,0,0">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Right" Text="(0=Any)" Style="{StaticResource FieldTextBlockStyle}" FontSize="8" VerticalAlignment="Bottom" Margin="0,0,2,2"/>
                                <TextBlock Text="Sample Size "  Style="{StaticResource FieldTextBlockStyle}"/>
                            </DockPanel>
                            <TextBox Text="{Binding UpdateModelSet.ModelTemplate.SampleSize}" />
                        </StackPanel>

                        <StackPanel Margin="5,0,0,0">
                            <TextBlock Text="Scale Factor" Style="{StaticResource FieldTextBlockStyle}" />
                            <TextBox Text="{Binding UpdateModelSet.ModelTemplate.ScaleFactor}" />
                        </StackPanel>



                        <StackPanel Margin="5,0,0,0">
                            <TextBlock Text="Channels"  Style="{StaticResource FieldTextBlockStyle}"/>
                            <TextBox Text="{Binding UpdateModelSet.ModelTemplate.Channels}" />
                        </StackPanel>

                        <StackPanel Margin="5,0,0,0">
                            <TextBlock Text="Normalize Type"  Style="{StaticResource FieldTextBlockStyle}"/>
                            <ComboBox ItemsSource="{Binding Source={StaticResource ImageNormalizeType}}" SelectedItem="{Binding UpdateModelSet.ModelTemplate.NormalizeType}" />
                        </StackPanel>

           

                    
                    </UniformGrid>

                    <UniformGrid DockPanel.Dock="Top" Columns="3" Margin="0,2,0,0" >
                        <StackPanel Margin="1,0,1,0" ToolTip="Upscale image in smaller tiles to save memory">
                            <TextBlock Style="{StaticResource FieldTextBlockStyle}">Default Tile Mode</TextBlock>
                            <ComboBox ItemsSource="{Binding Source={StaticResource TileMode}}" SelectedItem="{Binding UpdateModelSet.ModelTemplate.TileMode}" Style="{StaticResource EnumComboBox}"/>
                        </StackPanel>
                        <StackPanel ToolTip="The maximum tile size to use">
                            <TextBlock Text="Default Tile Size" Style="{StaticResource FieldTextBlockStyle}"/>
                            <TextBox Text="{Binding UpdateModelSet.ModelTemplate.TileSize, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TileMode, Converter={StaticResource InverseEnumToBoolConverter}, ConverterParameter=None}" />
                        </StackPanel>
                        <StackPanel ToolTip="Pixels to overlap when joining tiles, reduces visible seams">
                            <TextBlock Text="Default Tile Overlap" Style="{StaticResource FieldTextBlockStyle}"/>
                            <TextBox Text="{Binding UpdateModelSet.ModelTemplate.TileOverlap, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TileMode, Converter={StaticResource InverseEnumToBoolConverter}, ConverterParameter=None}" Margin="4,0,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                </StackPanel>
            </GroupBox>



            <GroupBox Margin="5,10,5,0" >
                <StackPanel>
                    <TextBlock Text="Execution Device" Style="{StaticResource FieldTextBlockStyle}"/>
                    <userControls:DevicePickerControl
                        DeviceId="{Binding UpdateModelSet.DeviceId, Mode=TwoWay}"
                        Provider="{Binding UpdateModelSet.ExecutionProvider, Mode=TwoWay}" />
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <DockPanel DockPanel.Dock="Bottom"  Margin="0,20,0,0" >
            <UniformGrid DockPanel.Dock="Right" Columns="2" Height="30">
                <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
            </UniformGrid>

            <TextBlock />
        </DockPanel>

    </DockPanel>
</local:BaseDialog>