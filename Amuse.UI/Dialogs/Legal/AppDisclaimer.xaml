<local:BaseDialog x:Class="Amuse.UI.Dialogs.AppDisclaimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amuse.UI.Dialogs"
        mc:Ignorable="d"
        x:Name="UI"
        Icon="/Images/Icon.png"
        MinWidth="400"
        MaxWidth="600"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" 
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="Information"
        Style="{StaticResource BaseToolWindow}">
    <DockPanel DataContext="{Binding ElementName=UI}" Margin="15, 15, 15, 10">

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <UniformGrid Columns="2" Height="30">
                <Button Content="Continue" Command="{Binding SaveCommand}" IsDefault="True"/>
                <Button Content="Exit" Command="{Binding CancelCommand}" Width="100"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Margin="10,0">
            <TextBlock Text="Important Notices and Disclaimers" FontWeight="Bold" FontSize="20" Margin="0,0,0,0" TextAlignment="Center"/>
            <TextBlock Text="Amuse is developed and maintained by TensorStack. By using this software, you agree to the following:" TextAlignment="Center" />
        </StackPanel>

        <Grid DockPanel.Dock="Bottom" Margin="0,15,0,0">
            <DockPanel HorizontalAlignment="Right" >
                <CheckBox DockPanel.Dock="Right" IsChecked="{Binding IsDisclaimerAccepted}" Margin="5,0,0,3" Style="{StaticResource SwitchBox}" Tag="Required" />
                <TextBlock Text="I have read and agree to these terms and conditions" FontSize="13"/>
            </DockPanel>
        </Grid>

        <Border Background="#30000000" BorderBrush="{StaticResource CheckBoxBorder}" BorderThickness="1" Margin="0,4,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" MaxHeight="400" >

                <StackPanel Margin="10" Opacity=".8" TextBlock.FontSize="10">
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="General Disclaimer" FontWeight="Bold" />
                        <LineBreak/>
                        <Run Text="Amuse may require compatible hardware, software, or activation services.No software or component is guaranteed to be completely secure.Your results may vary based on system configuration and usage." />
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="TensorStack is committed to upholding human rights and avoiding causing or contributing to adverse impacts on individuals or communities. Our software is intended to be used in ways that do not violate or undermine human rights. Misuse of Amuse for harmful or malicious purposes is strictly prohibited." />
                        <LineBreak/>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Data Privacy" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="Amuse operates fully offline. Prompts and generated images/videos are not collected or stored by TensorStack. Users are solely responsible for managing any personal or sensitive data processed through the application."/>
                        <LineBreak/>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Generative AI Disclaimers" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="Amuse includes generative AI capabilities, including TextToImage and TextToVideo features powered by large-scale machine learning models. Users should:"/>
                        <LineBreak/>
                        <Run Text="    • Carefully review outputs before sharing or taking action based on them."/>
                        <LineBreak/>
                        <Run Text="    • Be aware that results may be inaccurate, biased, or misleading."/>
                        <LineBreak/>
                        <Run Text="    • Use critical judgment when interpreting output tone, context, or attribution."/>
                        <LineBreak/>
                        <Run Text="    • Assume full responsibility for any use or distribution of generated content."/>
                        <LineBreak/>
                    </TextBlock>


                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Misuse, Malicious Use, and Out-of-Scope Use" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="Use of Amuse to generate harmful, offensive, or misleading content is a misuse of the software. This includes but is not limited to:"/>
                        <LineBreak/>
                        <Run Text="    • Creating demeaning, dehumanizing, or discriminatory content."/>
                        <LineBreak/>
                        <Run Text="    • Promoting harmful stereotypes or hostile environments."/>
                        <LineBreak/>
                        <Run Text="    • Generating or sharing sexual content or depictions of violence without appropriate context or consent."/>
                        <LineBreak/>
                        <Run Text="    • Impersonating individuals without permission."/>
                        <LineBreak/>
                        <Run Text="    • Distributing mis/disinformation."/>
                        <LineBreak/>
                        <Run Text="    • Violating the terms of use for copyrighted or licensed material."/>
                        <LineBreak/>
                    </TextBlock>


                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Model Limitations" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="Amuse relies on models trained on large-scale datasets that may contain noisy or biased data. As such:"/>
                        <LineBreak/>
                        <Run Text="    • The model does not ensure photorealism or accurate facial generation."/>
                        <LineBreak/>
                        <Run Text="    • It struggles with complex spatial relationships or rendering legible text."/>
                        <LineBreak/>
                        <Run Text="    • Output may be biased toward English-language prompts."/>
                        <LineBreak/>
                        <Run Text="    • The model may reflect memorized training data and should not be used for factual representation."/>
                        <LineBreak/>
                        <Run Text="    • Content moderation or filtering mechanisms are not built into the base model—additional safeguards may be necessary for production use."/>
                        <LineBreak/>
                    </TextBlock>


                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Compliance with Local Laws" FontWeight="Bold" />
                        <LineBreak/>
                        <Run Text="Users of Amuse are responsible for ensuring that their use of the software complies with all applicable local laws and regulations regarding AI-generated content. This includes, but is not limited to, laws related to:" />
                        <LineBreak/>
                        <Run Text="    • Ensure that generated content does not infringe on copyrights, trademarks, or other intellectual property rights."/>
                        <LineBreak/>
                        <Run Text="    • Comply with any data privacy laws and regulations, including those related to the use of personal data."/>
                        <LineBreak/>
                        <Run Text="    • Avoid using the software to create or distribute content that may violate local laws on hate speech, discrimination, or harassment."/>
                        <LineBreak/>
                        <Run Text="    • If required by local regulations, ensure that generated content is appropriately moderated to meet content guidelines set by governing bodies."/>
                        <LineBreak/>
                    </TextBlock>


                    <TextBlock TextWrapping="Wrap">
                        <Run Text="It is the user's responsibility to be aware of and adhere to any legal constraints specific to their jurisdiction. " />
                        <LineBreak/>
                        <Run Text="TensorStack" FontWeight="Bold"/>
                        <Run Text=" encourages responsible and lawful use of " />
                        <Run Text="Amuse" FontWeight="Bold"/>
                        <Run Text=" to ensure a positive and respectful environment for all."/>
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>
        </Border>


    </DockPanel>
</local:BaseDialog>