<UserControl x:Class="Amuse.UI.UserControls.VariantPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="200" 
             Name="VariantPickerControl">
    <Border DataContext="{Binding ElementName=VariantPickerControl}" >
        <ComboBox ItemsSource="{Binding VariantOptions}" SelectedItem="{Binding VariantOption}" SelectedIndex="0"/>
    </Border>
</UserControl>
